{
    "compilerOptions": {
      "baseUrl": ".",
      "lib": ["es2016"],
      "paths": {
        "*": ["src/*"]
      },
      "esModuleInterop": true,
      "allowJs": true,
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "outDir": "./dist"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
  }